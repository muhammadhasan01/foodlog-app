<% if notice.present? %>
  <div class="notification is-link is-light">
    <%= notice %>
  </div>
<%end %>

<% if alert.present? %>
  <div class="notification is-danger is-light">
    <%= alert %>
  </div>
<%end %>

<% content_for :title do %>
  <%= @entry.meal_entry %> &ndash; <%= DateTime.now.strftime("%B %e, %Y") %>
<% end %>
<div class="columns mt-6 is-centered">
  <div class="column is-one-third">
    <nav class="panel is-link">
      <p class="panel-heading">
        <%= @entry.meal_entry %>:
      </p>

      <div class="panel-block">
        Calories: <%= @entry.calories %>
      </div>

      <div class="panel-block">
        Proteins: <%= @entry.protiens %>
      </div>

      <div class="panel-block">
        Carbohydrates: <%= @entry.carbohydrates %>
      </div>

      <div class="panel-block">
        Fats: <%= @entry.fats %>
      </div>
    </nav>

    <div class="columns is-mobile">
      <div class="column">
        <%= link_to "Back to entries", entries_path, class: "button is-gray" %>
      </div>
      <div class="column">
        <%= link_to 'Edit', edit_entry_path(@entry), class: "button is-gray" %>
        <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?"}, class: "button is-grey" %>
      </div>
    </div>
  </div>
</div>